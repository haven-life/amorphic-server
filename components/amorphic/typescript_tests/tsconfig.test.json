{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@havenlife/*": [
                "../../src"
            ]
        }
    },
    "include": [
        "./unittest",
        "./apps"
    ],

    "exclude": ["node_modules", "../../semotus", "../../supertype", "../../persistor"]
}
